<odoo>

     <record id="offers_tree_view" model="ir.ui.view">
             <field name="name">offers_tree_view</field>
             <field name="model">estate.property.offer</field>
             <!-- <field eval="8" name="priority"/> -->
             <field name="arch" type="xml">
                 <tree string="Property Offers" editable="bottom" decoration-success="status == 'a'" decoration-danger="status == 'r'" >
                     <field name="price"/>
                     <field name="partner_id"/>
                     <field name="validity"/>
                     <field name="date_deadline"/>
                     <button name="action_accept"  type="object" icon="fa-check" attrs="{'invisible': [('status', 'in', ['a','r'])]}"/>
                     <button name="action_refuse" type="object" icon="fa-times" attrs="{'invisible': [('status', 'in', ['a','r'])]}"/>
                     <field name="status" invisible="1"/>
                 </tree>
             </field>
         </record>
    
        <record id="offers_form_view" model="ir.ui.view">
            <field name="name">offers_tree_view</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <form string="Property Tags">
                     <sheet>
                        <group >
                            <field name="price"/>
                            <field name="partner_id"/>
                            <field name="validity"/>
                            <field name="date_deadline"/>
                            <field name="status" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
</odoo>