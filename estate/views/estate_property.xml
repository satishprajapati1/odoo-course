<odoo>

    <record id="estate_tree_view" model="ir.ui.view" >
        <field name="name">estate_tree_view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree decoration-muted="state == 'so'" decoration-success="['|',('state','=','or'),('state','=','oa')]" decoration-bf="state == 'oa'"  >
            <!-- Problem Colors are mixed -->
                <field name="name"/>
                <field name="postcode"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="state" invisible="1"/>
                <field name="date_availability" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="estate_form_view" model="ir.ui.view">
        <field name="name">estate_form_view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_sold" states="new,or,oa" type="object" string="Sold"/>
                    <button name="action_cancel" states="new,or,oa" type="object" string="Cancel"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,or,oa,so"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" editable="bottom"/>
                    <group>
                        <group>
                        <!-- options are used to stop creation of new types -->
                            <field name="property_type_id" options="{'no_open':True,'no_create': True}"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>  
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"/>
                                <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <group>
                                <field editable="bottom" name="offer_ids" attrs="{'readonly': [('state', 'in', ['oa','so','ca'])]}" />
                            </group>
                        </page>
                        <page string="Other Info.">
                            <group>
                                <field name="seller"/>
                                <field name="buyer"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_search_view" model="ir.ui.view" >
        <field name="name">estate_search_view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="['|',('name','ilike',self),('postcode','ilike',self)]"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area', '&gt;=', self)]"/>
                <field name="facades"/>
                <filter name="available" string="Available" domain="['|',('state','=','new'),('state','=','or')]"/>
                <group expand="0" string="Group By">
                    <filter string="Postcode" name="postcode_groupby" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>


</odoo>